
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">

    <EditTextPreference
        android:key="@string/device_name"
        android:title="@string/device_name"
        android:defaultValue="@string/defaultDevice"
        android:selectAllOnFocus="true"
        android:inputType="text"
        android:capitalize="words"
        android:singleLine="true"
        android:maxLines="1" />

    <SwitchPreference
        android:defaultValue="false"
        android:key="@string/firebase_enable"
        android:title="@string/firebase_enable" />

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/searchByName"
        android:title="@string/searchByName" />

    <PreferenceCategory android:title="@string/categoryName">
        <EditTextPreference
            android:key="@string/device_mDNS"
            android:title="@string/device_mDNS"
            android:defaultValue="@string/defaultDevice"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
    </PreferenceCategory>

    <PreferenceCategory android:title="@string/categoryIP">
        <EditTextPreference
            android:key="@string/device_ip"
            android:title="@string/device_ip"
            android:defaultValue="@string/defaultIP"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />
        <EditTextPreference
            android:key="@string/device_port"
            android:title="@string/device_port"
            android:defaultValue="@string/defaultPort"
            android:selectAllOnFocus="true"
            android:inputType="text"
            android:capitalize="words"
            android:singleLine="true"
            android:maxLines="1" />


    </PreferenceCategory>

    <SwitchPreference
        android:defaultValue="true"
        android:key="@string/searchWiFiOnly"
        android:title="@string/searchWiFiOnly" />

</PreferenceScreen>